<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 切入点 -->
    <bean id = "person" class="com.tian.spring.aop.spring.service.impl.PersonImpl"></bean>
    <!-- 切面   -->
    <bean id="before" class="com.tian.spring.aop.spring.service.impl.XsBeforeAdvice"></bean>
    <!--  代理  -->
    <bean id="personProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="person"/>
        <property name="interceptorNames">
            <array>
                <value>before</value>
            </array>
        </property>
    </bean>

</beans>